<!DOCTYPE html>
<html lang="en">
  <%- include("head.ejs", {title: "Leaderboard"}) %>
  <body>
    <%- include("navbar.ejs") %>

    <style>
      table {
        width: 100%;
        border-collapse: collapse;
        <% if (user.exunite) { %>
        margin-top: 30px;
        <% } %>
      }

      thead tr {
        font-size: 1.1rem;
        font-family: "Sen", -apple-system, BlinkMacSystemFont, "Segoe UI",
          Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue",
          sans-serif;
        text-transform: uppercase;
      }

      td {
        border: none;
      }

      thead tr td {
        background: #2977f5;
        color: #eaeaef;
      }

      thead tr td:first-of-type {
        border-radius: 5px 0 0 0;
      }

      thead tr td:last-of-type {
        border-radius: 0 5px 0 0;
      }

      tbody tr:last-of-type td:first-of-type {
        border-radius: 0 0 0 5px;
      }

      tbody tr:last-of-type td:last-of-type {
        border-radius: 0 0 5px 0;
      }

      tbody tr:nth-child(odd) {
        background: #333;
      }

      td {
        padding: 15px 20px;
        text-align: center;
      }

      td:nth-child(1) {
        width: 5%;
      }

      tbody td:nth-child(2) {
        width: 3%;
        vertical-align: middle;
        text-align: center;
        /* border: 1px solid white; */
        padding-right: 0;
      }

      tbody td:nth-child(3),
      thead td:nth-child(2) {
        width: 47%;
        text-align: left;
        height: 40px;
        vertical-align: middle !important;
      }
      thead td:nth-child(2) {
        width: 50%;
      }

      td:nth-child(4),
      td:nth-child(5),
      tbody td:nth-child(6),
      thead td:nth-child(3) {
        width: 15%;
      }

      tbody td:nth-child(2) img {
        height: 30px;
        width: 30px;
        border: none;
        border-radius: 100px;
      }

      .level {
        display: none;
      }

      .img-name {
        display: none;
      }

      /* @media screen and (max-width: 800px) {
        tbody td:nth-child(5),
        thead td:nth-child(4) {
          display: none;
        }

        .level,
        .img-name {
          display: inline-block;
        }

        table img {
          display: none;
        }

        tbody td:nth-child(3) {
          display: none;
        }

        thead td:nth-child(3),
        tbody td:nth-child(4) {
          display: none;
        }

        thead td:nth-child(2),
        tbody td:nth-child(2) {
          text-align: left !important;
          width: 80%;
        }
      } */

      table a {
        color: inherit;
        /* font-weight: 400; */
      }
    </style>

    <div class="body-container">
      <% if (user && user.exunite) { %> <% if(exun) { %>
      <a class="leaderboard-nav" href="/leaderboard">Regular leaderboard</a>
      <% } else { %>
      <a class="leaderboard-nav" href="/leaderboard/exun">Exun leaderboard</a>
      <% } %> <% } %>
      <table>
        <thead>
          <tr>
            <td></td>
            <td colspan="2">Profile</td>
            <td>Class</td>
            <td>Level</td>
            <td>Points</td>
          </tr>
        </thead>
        <tbody>
          <% for(let i = 0; i < users.length; i++) { %>
          <tr>
            <td><%- i + 1 %></td>
            <td>
              <img src="<%- users[i].photo %>" alt="<%- users[i].username %>" />
              <!-- <span class="img-name"
                ><%- users[i].name %> (<%- users[i].username %>)</span
              > -->
            </td>
            <td>
              <a href="/users/<%- users[i].username %>">
                <span><%- users[i].name %></span>
                <% if(users[i].exunite && !exun) { %>
                <span>[NC]</span>
                <% } %></a
              >
            </td>
            <td>
              <%- users[i].class %>-<%-users[i].section %>
            </td>
            <td>
              <%- users[i].levelNo %> <% if(users[i].finished) { %>
              <span>&#127937;</span>
              <% } %>
            </td>
            <td>
              <span><%- users[i].points %></span>
              <!-- <span class="level">(<%- users[i].levelNo %>)</span> -->
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>

